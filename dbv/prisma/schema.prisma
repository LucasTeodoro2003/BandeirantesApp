generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  clubId        String?
  permission    Int       @default(5)
  members       Member?
  accounts      Account[]
  sessions      Session[]
  club          Club?     @relation(fields: [clubId], references: [id])

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Club {
  id      String   @id @default(cuid())
  name    String
  image   String?
  members Member[]
  units   Unit[]
  users   User[]
}

model Unit {
  id         String   @id @default(cuid())
  name       String
  image      String?
  clubId     String
  members    Member[]
  PointsUnit Point[]  @relation("UnitPoints")
  club       Club     @relation(fields: [clubId], references: [id])
}

model Member {
  id           String    @id @default(cuid())
  birthDate    DateTime?
  active       Boolean   @default(true)
  userId       String    @unique
  clubId       String
  unitId       String?
  permission   Int       @default(3)
  club         Club      @relation(fields: [clubId], references: [id])
  unit         Unit?     @relation(fields: [unitId], references: [id])
  user         User      @relation(fields: [userId], references: [id])
  PointsMember Point[]   @relation("MemberPoints")
}

model Point {
  id       String  @id @default(cuid())
  value    String
  reason   String?
  unitId   String?
  memberId String?
  member   Member? @relation("MemberPoints", fields: [memberId], references: [id])
  unit     Unit?   @relation("UnitPoints", fields: [unitId], references: [id])
}